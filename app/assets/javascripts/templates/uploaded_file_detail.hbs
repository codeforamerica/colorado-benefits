<div class="uploaded-file-detail">
    <div class="doc-preview">
        <div class="doc-preview__info">
            <h4>{{filename}}</h4>
            <p class="text--help">
              <a class="delete-file-link link--subtle" href="#">
                Delete
              </a>
            </p>
        </div>
        <div class="doc-preview__thumb">
            <img src="/rails/active_storage/blobs/{{signed_id}}/{{filename}}">
        </div>
    </div>
    <input type="hidden" value="{{signed_id}}" name="{{inputName}}" />
</div>