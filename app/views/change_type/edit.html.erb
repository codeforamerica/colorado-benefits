<% content_for :card_title, "What changed?" %>

<% content_for :card_body do %>
    <%= fields_for(:form, @form, builder: CfaFormBuilder) do |f| %>
        <%= f.cfa_radio_set :change_type,
                            label_text: "What changed?",
                            legend_class: "sr-only",
                            collection: [
                              { value: :job_termination, label: t(self_or_other_member_translation_key(".job_termination")) },
                              { value: :new_job, label: t(self_or_other_member_translation_key(".new_job")) },
                              { value: :change_in_hours, label: t(self_or_other_member_translation_key(".change_in_hours")) },
                            ] %>
    <% end %>
<% end %>
