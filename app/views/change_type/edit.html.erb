<% content_for :card_title, "What changed?" %>

<% content_for :card_body do %>
    <%= fields_for(:form, @form, builder: CfaFormBuilder) do |f| %>
        <%= f.cfa_radio_set :change_type,
                            label_text: "What changed?",
                            legend_class: "sr-only",
                            collection: [
                              { value: :job_termination, label: t(".job_termination", **self_or_member) },
                              { value: :new_job, label: t(".new_job", **self_or_member) },
                              { value: :change_in_hours, label: t(".change_in_hours", **self_or_member) },
                            ] %>
    <% end %>
<% end %>
