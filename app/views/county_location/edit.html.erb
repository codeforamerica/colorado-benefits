<% content_for :card_title, "First thing, do you live in Arapahoe County?" %>

<% content_for :card_help, "If you’re homeless or have an unstable address, pick “yes” if you want your case to be handled by Arapahoe County." %>

<% content_for :card_body do %>
    <%= fields_for(:form, @form, builder: Cfa::Styleguide::CfaFormBuilder) do |f| %>
        <%= f.cfa_radio_set :selected_county_location,
                            label_text: "Do you live in Arapahoe County?",
                            legend_class: "sr-only",
                            collection: [
                             { value: :arapahoe, label: "Yes" },
                             { value: :not_arapahoe, label: "No" },
                             { value: :not_sure, label: "I'm not sure" },
                           ] %>
    <% end %>
<% end %>
