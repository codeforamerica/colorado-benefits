<% content_for :form_card_title, "Do you have a letter or final paycheck?" %>

<% content_for :form_card_body do %>
    <%= fields_for(:form, @form, builder: CfaFormBuilder) do |f| %>
        <%= f.cfa_radio_set :has_letter,
                            label_text: "Do you have a letter or final paycheck?",
                            legend_class: "sr-only",
                            collection: [
                              { value: :yes, label: "Yes, I have this with me" },
                              { value: :no, label: "No, I don't have this" },
                            ] %>
    <% end %>
<% end %>

<% content_for :progress_indicator_percentage, "60" %>
