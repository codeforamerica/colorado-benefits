<% content_for :content do %>
  <div class="slab">
    <main id="main" class="form-card">
      <header class="form-card__header">
        <h1 class="form-card__title">
          All of the screens! <div class="emoji emoji--small emoji--party-popper"></div>
        </h1>
      </header>

      <div class="form-card__content">
        <div class="slab">
          <% FormNavigation.form_controllers.each do |form| %>
            <div>
              <%= link_to form.to_param.titleize,
                screen_path(form.to_param),
                class: 'button button--small button--full-mobile' %>
            </div>
          <% end %>
        </div>
      </div>
    </main>
  </div>
<% end %>