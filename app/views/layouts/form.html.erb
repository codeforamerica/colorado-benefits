<% content_for :content do %>
  <div class="slab">
    <main id="main" class="card">
      <%= form_tag @step, as: :step, url: current_path, method: :put %>
        <header class="card__header">
          <h1 class="card__title">
            <%= yield :card_title %>
          </h1>

          <% if content_for? :card_help %>
            <p class="text--help">
              <%= yield :card_help %>
            </p>
          <% end %>
        </header>

        <div class="card__content">
          <%= yield :card_body %>
        </div>

        <div class="card__footer">
          <%= render "shared/next_step", button_label: content_for(:card_footer_button_label) || 'Continue' %>
        </div>
      </form>
    </main>

    <%= render "shared/progress_indicator", progress_indicator_percentage: current_percentage %>
  </div>
<% end %>

<%= render template: 'layouts/application' %>
