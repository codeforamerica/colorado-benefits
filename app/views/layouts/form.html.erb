<% content_for :content do %>
  <div class="slab">
    <main id="main" class="form-card">
      <%= form_tag @step, as: :step, url: current_path, method: :put %>
        <header class="form-card__header">
          <h1 class="form-card__title">
            <%= yield :form_card_title %>
          </h1>

          <% if content_for? :form_card_help %>
            <p class="text--help">
              <%= yield :form_card_help %>
            </p>
          <% end %>
        </header>

        <div class="form-card__content">
          <%= yield :form_card_body %>
        </div>

        <div class="form-card__footer">
          <%= render "shared/next_step", button_label: content_for(:form_card_footer_button_label) || 'Continue' %>
        </div>
      </form>
    </main>

    <%= render "shared/progress_indicator", progress_indicator_percentage: current_percentage %>
  </div>
<% end %>

<%= render template: 'layouts/application' %>
