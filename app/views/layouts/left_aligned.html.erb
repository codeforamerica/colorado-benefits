<% content_for :content do %>
  <div class="slab">
    <main id="main" class="form-card">
      <%= form_with url: current_path, method: :put, local: true %>
        <header class="form-card__header">
          <h1 class="form-card__title">
            <%= yield :card_title %>
          </h1>

          <% if content_for? :card_help %>
            <p class="text--help">
              <%= yield :card_help %>
            </p>
          <% end %>
        </header>

        <div class="form-card__content">
          <%= yield :card_body %>
        </div>

        <div class="form-card__footer">
          <footer class="form-card__button_right">
            <button class="button button--nav  button--primary button--full-mobile" type="submit">
              <%= content_for(:card_footer_button_label) || "Continue" %>
              <i class="button__icon icon-arrow_forward"></i>
            </button>
          </footer>
        </div>
      </form>
    </main>

    <%= yield :outside_card_link %>

    <%= render "shared/progress_indicator", progress_indicator_percentage: current_percentage %>
  </div>
<% end %>

<%= render template: 'layouts/application' %>
