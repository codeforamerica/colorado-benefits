<% content_for :content do %>
  <div class="slab">
    <% if content_for? :emoji %>
      <main id="main" class="card card--transition">
        <header class="card__header">
          <div class="emoji emoji--big <%= content_for :emoji %> with-padding-med"></div>
    <% else %>
      <main id="main" class="card">
        <header class="text--centered">
    <% end %>
      <h1 class="card__title">
        <%= yield :card_title %>
      </h1>

      <% if content_for? :card_subtitle %>
        <div class="card__subtitle">
          <%= yield :card_subtitle %>
        </div>
      <% end %>

      <% if content_for? :card_help %>
        <p class="text--help">
          <%= yield :card_help %>
        </p>
      <% end %>
      </header>

      <div class="card__content text--centered">
        <%= yield :card_body %>
      </div>
    </main>
  </div>
<% end %>

<%= render template: 'layouts/application' %>
