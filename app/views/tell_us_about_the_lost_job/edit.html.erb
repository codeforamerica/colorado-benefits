<% content_for :card_title, t(self_or_other_member_translation_key(".title"), name: current_change_report.member.first_name) %>

<% content_for :card_body do %>
    <%= fields_for(:form, @form, builder: CfaFormBuilder) do |f| %>
        <%= f.cfa_input_field :company_name, "What is the name of the company?" %>
        <%= f.cfa_input_field :manager_name,
                              t(self_or_other_member_translation_key(".manager_name"), name: current_change_report.member.first_name),
                              help_text: t(self_or_other_member_translation_key(".manager_name_help")) %>
        <%= f.cfa_input_field :manager_phone_number, t(self_or_other_member_translation_key(".manager_phone_number")), classes: ["form-width--phone"] %>
        <%= f.cfa_textarea :manager_additional_information,
                           t(self_or_other_member_translation_key(".manager_additional_information"), name: current_change_report.member.first_name),
                           optional: true %>
        <%= f.cfa_date_select :last_day,
                              t(self_or_other_member_translation_key(".last_day")),
                              help_text: "Estimate if you're not sure.",
                              options: { start_year: Time.now.year, end_year: Time.now.year - 3 } %>
        <%= f.cfa_date_select :last_paycheck,
                              t(self_or_other_member_translation_key(".last_paycheck")),
                              help_text: "Estimate if you're not sure.",
                              options: { start_year: Time.now.year, end_year: Time.now.year - 3 } %>
        <%= f.cfa_input_field :last_paycheck_amount,
                              t(self_or_other_member_translation_key(".last_paycheck_amount")),
                              classes: ["form-width--phone"],
                              prefix: "$",
                              optional: true %>
    <% end %>
<% end %>
