<% content_for :card_title, t(".title", **self_or_member) %>

<% content_for :card_body do %>
  <%= fields_for(:form, @form, builder: CfaFormBuilder) do |f| %>
    <%= f.cfa_input_field :name, t(".name", **self_or_member) %>
    <%= f.cfa_date_select :birthday, t(".birthday", **self_or_member), { options: { start_year: Time.now.year, end_year: 1900 } } %>
    <%= f.cfa_input_field :case_number,
                          t(".case_number", **self_or_member),
                          help_text: t(".case_number_help", **self_or_member),
                          optional: true %>
    <%= f.cfa_input_field :ssn,
                          t(".ssn", **self_or_member),
                          classes: ["form-width--ssn"],
                          optional: true,
                          notice: t(".ssn_help", **self_or_member) %>
    <%= f.cfa_input_field :phone_number, t(".phone_number", **self_or_member), classes: ["form-width--phone"] %>
  <% end %>
<% end %>
