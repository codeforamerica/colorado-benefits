<% content_for :card_title, "What do you have?" %>

<% content_for :card_body do %>
    <%= fields_for(:form, @form, builder: Cfa::Styleguide::CfaFormBuilder) do |f| %>
      <% if current_change_report.change_type_new_job? %>
        <%= f.cfa_checkbox_set_with_none [
          { method: :has_offer_letter, label: "I have an offer letter" },
          { method: :has_paystub, label: "I have paystubs" }
        ],
       none_text: "I don't have either of these",
        enum: true %>
      <% elsif current_change_report.change_type_change_in_hours? %>
        <%= f.cfa_checkbox_set_with_none [
             { method: :has_change_in_hours_letter, label: "I have a letter" },
             { method: :has_paystub, label: "I have paystubs" }
         ],
        none_text: "I don't have either of these",
         enum: true %>
      <% end %>
    <% end %>
<% end %>
